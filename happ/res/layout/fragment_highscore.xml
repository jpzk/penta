<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_highscore"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/box2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.happ.MainActivity$PlaceholderFragment"
    tools:ignore="Deprecated,ContentDescription" >

    <LinearLayout
        android:id="@+id/highscore_player"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="20dp" >

        <ListView
            android:id="@+id/highscore_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
        </ListView>

        <ImageButton
            android:id="@+id/highscore_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:scaleType="fitCenter"
            android:src="@drawable/newgame" />
    </LinearLayout>
    
</LinearLayout>